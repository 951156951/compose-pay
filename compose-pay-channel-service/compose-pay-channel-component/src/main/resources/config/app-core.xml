<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.2.xsd">



    <!-- 通道服务插件配置 -->
    <bean id="channelServicePlugin" class="io.github.pleuvoir.channel.extension.DefaultChannelServicePlugin" init-method="load">
        <property name="location" value="classpath:config/plugins/channel/*.xml"/>
    </bean>

    <!-- 服务工厂-->
    <bean class="io.github.pleuvoir.channel.extension.DefaultChannelServiceFactory" >
        <property name="channelServicePlugin" ref="channelServicePlugin"></property>
    </bean>

</beans>